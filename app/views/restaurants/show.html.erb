<h3><%= @restaurant.name %></h3>
<div><%= @restaurant.description %></div><br/>
<div><%= link_to "Return to restaurant list", restaurants_path %></div></br>

<h3>Review this restaurant</h3>
<%= form_for [@restaurant, @review] do |f| %>

  <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div><br/>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div><br/>

  <%= f.submit %>
<% end %>

<br/><br/>

<h3>reviews</h3>
<ul>
    <% @restaurant.reviews.each do |review| %>
      <li>Rating: <%= review.rating %><br/>
          <%= review.body %></li>
    <% end %>
</ul><br/><br/>
